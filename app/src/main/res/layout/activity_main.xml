<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="12"
    android:background="@color/blue"
    tools:context="a2.csci412.wwu.edu.memorygain.MainActivity"
    tools:layout_editor_absoluteY="89dp">


    <TextView
        android:id="@+id/messageSet"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="212dp"
        android:layout_marginStart="231dp"
        android:layout_marginTop="13dp"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/recallText"
        app:layout_constraintEnd_toEndOf="@+id/recallText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/recallText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="29dp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="@string/mainHeading"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/goToGuessPhrase"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:id="@+id/goToPhraseRecall"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginBottom="339dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:background="@color/yellow"
        android:onClick="goToPhraseRecall"
        android:text="@string/phraseButton"
        app:layout_constraintBottom_toTopOf="@+id/goToStats"
        app:layout_constraintEnd_toEndOf="@+id/goToLocationRecall"
        app:layout_constraintStart_toStartOf="@+id/goToLocationRecall"
        app:layout_constraintTop_toBottomOf="@+id/recallText"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/goToGuessPhrase"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginBottom="61dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:background="@color/orange"
        android:onClick="goToPhraseGuess"
        android:text="@string/goToPhraseGuess"
        app:layout_constraintBottom_toTopOf="@+id/goToGuessLocation"
        app:layout_constraintEnd_toEndOf="@+id/goToGuessLocation"
        app:layout_constraintStart_toStartOf="@+id/goToGuessLocation"
        app:layout_constraintTop_toBottomOf="@+id/recallText"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/goToLocationRecall"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="@color/yellow"
        android:onClick="goToLocationRecall"
        android:text="@string/locationButton"
        app:layout_constraintBottom_toTopOf="@+id/goToImageNew"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goToPhraseRecall"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/goToGuessLocation"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginBottom="506dp"
        android:layout_marginEnd="59dp"
        android:layout_weight="1"
        android:background="@color/orange"
        android:onClick="goToLocationGuess"
        android:text="@string/goToLocationGuess"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goToGuessPhrase"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/goToImageNew"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:background="@color/yellow"
        android:onClick="goToImageNew"
        android:text="@string/imageButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/goToLocationRecall"
        app:layout_constraintStart_toStartOf="@+id/goToLocationRecall"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/goToGuessImage"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:background="@color/orange"
        android:onClick="goToImageRecall"
        android:text="@string/goToGuessImage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/goToGuessLocation"
        app:layout_constraintStart_toStartOf="@+id/goToGuessLocation"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/goToStats"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginBottom="228dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:background="@color/red"
        android:onClick="goToStatistics"
        android:text="@string/statsButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/recallText"
        app:layout_constraintStart_toStartOf="@+id/recallText"
        app:layout_constraintTop_toBottomOf="@+id/goToPhraseRecall"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/goToSettings"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="@color/red"
        android:onClick="goToSettings"
        android:text="@string/settingsButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/goToStats"
        app:layout_constraintStart_toStartOf="@+id/goToStats"
        app:layout_constraintTop_toBottomOf="@+id/goToStats"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />


</android.support.constraint.ConstraintLayout>
