<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="12"
    tools:context="a2.csci412.wwu.edu.memorygain.MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/messageSet"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="13dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/recallText"
        app:layout_constraintStart_toStartOf="@+id/recallText"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/recallText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="@string/mainHeading"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/goToPhraseRecall"
        app:layout_constraintEnd_toStartOf="@+id/goToGuessPhrase"
        app:layout_constraintStart_toStartOf="@+id/goToGuessPhrase"
        app:layout_constraintTop_toBottomOf="@+id/message"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:id="@+id/goToPhraseRecall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="45dp"
        android:layout_marginStart="41dp"
        android:layout_weight="1"
        android:onClick="goToPhraseRecall"
        android:text="@string/phraseButton"
        app:layout_constraintBottom_toTopOf="@+id/goToLocationRecall"
        app:layout_constraintEnd_toStartOf="@+id/goToGuessPhrase"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recallText"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/goToGuessPhrase"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:onClick="goToPhraseGuess"
        android:text="@string/goToPhraseGuess"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/goToPhraseRecall"
        app:layout_constraintTop_toBottomOf="@+id/recallText"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/goToLocationRecall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="45dp"
        android:layout_marginStart="41dp"
        android:layout_weight="1"
        android:onClick="goToLocationRecall"
        android:text="@string/locationButton"
        app:layout_constraintBottom_toTopOf="@+id/goToImageRecall"
        app:layout_constraintEnd_toStartOf="@+id/goToGuessLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goToPhraseRecall"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/goToGuessLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="32dp"
        android:layout_weight="1"
        android:onClick="goToLocationGuess"
        android:text="@string/goToLocationGuess"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/goToLocationRecall"
        app:layout_constraintTop_toBottomOf="@+id/goToGuessPhrase"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/goToImageRecall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="45dp"
        android:layout_marginStart="41dp"
        android:layout_weight="1"
        android:onClick="goToImageRecall"
        android:text="@string/imageButton"
        app:layout_constraintBottom_toTopOf="@+id/goToStats"
        app:layout_constraintEnd_toStartOf="@+id/goToGuessImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goToLocationRecall"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/goToGuessImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="25dp"
        android:layout_weight="1"
        android:onClick="goToImageRecall"
        android:text="@string/goToGuessImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/goToImageRecall"
        app:layout_constraintTop_toBottomOf="@+id/goToGuessLocation"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/goToStats"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_weight="1"
        android:onClick="goToStatistics"
        android:text="@string/statsButton"
        app:layout_constraintBottom_toTopOf="@+id/goToSettings"
        app:layout_constraintEnd_toStartOf="@+id/goToGuessImage"
        app:layout_constraintStart_toStartOf="@+id/goToGuessImage"
        app:layout_constraintTop_toBottomOf="@+id/goToImageRecall"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/goToSettings"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:layout_weight="1"
        android:onClick="goToSettings"
        android:text="@string/settingsButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goToStats"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />


</android.support.constraint.ConstraintLayout>
