<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="89dp">
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notifications"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:paddingTop="20sp">

        <Switch
            android:id="@+id/notifSwitch"
            android:layout_width="300sp"
            android:layout_height="match_parent"
            android:text="@string/enabNotif"
            android:textSize="17sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:paddingTop="20sp">

        <Switch
            android:id="@+id/vibrateSwitch"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:text="@string/enableVib"
            android:textSize="17sp" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:paddingTop="20sp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/locationServices"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20sp">

        <Switch
            android:id="@+id/locationSwitch"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/enabGPS"
            android:textColor="@color/black"
            android:textSize="17sp" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:paddingTop="20sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timers"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10sp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phraseTimer"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/newPhraseTime"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textColor="@color/black" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10sp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/locationTimer"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/newLocationTime"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/imageTimer"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/newImageTime"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textColor="@color/black" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/resetBtn"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:onClick="reset"
            android:text="@string/reset" />

        <Button
            android:id="@+id/mainBtn"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:onClick="goBack"
            android:text="@string/mainPage" />



    </LinearLayout>

</LinearLayout>